@model Proyecto_Final.Models.ViewModels.User
@{
    ViewBag.Title = "Registro";
}
@Html.ValidationSummary()
<div class="row">
<div class="col-md-2"></div>
<div class="col-md-8">
<form method="post" action="~/cuenta/ProcesarRegistro" class="formulario-registro">
          <div class="form-group">
            <div class="row div-h3">
              <div class="col-12">
                <h3>Registro</h3>
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <label for="">Nombres *</label>
                @Html.TextBoxFor(m=>m.Nombre, new { @class = "form-control" })
              </div>
            </div>
            
            
            <div class="row">
              <div class="col-12">
                <label for="">Apellidos *</label>
                 @Html.TextBoxFor(m=>m.Apellidos, new { @class = "form-control" })
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <label for="">Correo electrónico *</label>
                @Html.TextBoxFor(m=>m.Correo, new { @class = "form-control", type = "email" })
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <label for="">Teléfono *</label>
                @Html.TextBoxFor(m=>m.Telefono, new { @class = "form-control" })
                
            </div>
            <div class="row">
              <div class="col-12">
                <label for="">Contraseña *</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <input type="checkbox" class=""> He leído y acepto los Términos y Condiciones así como las Políticas de Privacidad de Maribel SAC.
              </div>
            </div>
            <div class="row div-btn-registrar">
              <div class="col-12">
                <button type="submit" class="btn btn-registrar">Registrar</button>
              </div>
            </div>
          </div>    
        </form>
</div>
<div class="col-md-2"></div>
</div>